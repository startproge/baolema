<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/orderdetail_status_no1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >

        <ImageView
            android:id="@+id/orderdetail_status_point1"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/ic_icon_orderdetail_point"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp"
            />

        <TextView
            android:id="@+id/orderdetail_status_text1_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单已提交"
            android:textSize="20dp"
            app:layout_constraintStart_toEndOf="@id/orderdetail_status_point1"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:id="@+id/orderdetail_status_text1_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请耐心等待商家确认"
            app:layout_constraintCircle="@id/orderdetail_status_text1_1"
            app:layout_constraintCircleAngle="150"
            app:layout_constraintCircleRadius="25dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1月8日 23:23"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="25dp"
            android:textSize="17dp"
            android:layout_marginRight="7dp"/>



    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/orderdetail_status_no2"
        app:layout_constraintTop_toBottomOf="@id/orderdetail_status_no1"
        app:layout_constraintStart_toStartOf="parent"
        >

        <ImageView
            android:id="@+id/orderdetail_status_point2"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/ic_icon_orderdetail_point"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp"
            />

        <TextView
            android:id="@+id/orderdetail_status_text2_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单已提交"
            android:textSize="20dp"
            app:layout_constraintStart_toEndOf="@id/orderdetail_status_point2"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:id="@+id/orderdetail_status_text2_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请耐心等待商家确认"
            app:layout_constraintCircle="@id/orderdetail_status_text2_1"
            app:layout_constraintCircleAngle="150"
            app:layout_constraintCircleRadius="25dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1月8日 23:23"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="25dp"
            android:textSize="17dp"
            android:layout_marginRight="7dp"/>



    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>