<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/recipe_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:text="菜名"
        android:textColor="@color/colorGray"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/recipe_num"
        android:layout_width="60sp"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:text="1"
        android:textColor="@color/colorGray"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/recipe_name"
        app:layout_constraintRight_toLeftOf="@+id/recipe_money"
        app:layout_constraintTop_toTopOf="@id/recipe_name" />

    <TextView
        android:id="@+id/recipe_money"
        android:layout_width="90sp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10sp"
        android:gravity="end"
        android:text="￥30"
        android:textColor="@color/colorGray"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/recipe_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/recipe_name" />

</androidx.constraintlayout.widget.ConstraintLayout>