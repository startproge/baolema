<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/recipe_image"
        android:layout_width="80sp"
        android:layout_height="60sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="20sp"
        android:background="@drawable/ic_image_shop_phone"
        >
    </ImageView>
    <TextView
        android:id="@+id/recipe_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="红烧排骨"
        android:textColor="@color/colorBlack"
        app:layout_constraintTop_toTopOf="@+id/recipe_image"
        app:layout_constraintLeft_toRightOf="@+id/recipe_image"
        android:layout_marginLeft="15sp"

        >
    </TextView>
    <TextView
        android:id="@+id/recipe_information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="信息"
        android:textColor="@color/colorGray"
        app:layout_constraintTop_toBottomOf="@+id/recipe_name"
        app:layout_constraintLeft_toLeftOf="@+id/recipe_name"

        >
    </TextView>
    <TextView
        android:id="@+id/recipe_monthly_sale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="月售"
        android:textColor="@color/colorGray"
        app:layout_constraintTop_toBottomOf="@+id/recipe_information"
        android:layout_marginTop="5sp"
        app:layout_constraintLeft_toLeftOf="@+id/recipe_information"
        >
    </TextView>
    <TextView
        android:id="@+id/recipe_evaluation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="评论"
        android:textColor="@color/colorGray"
        app:layout_constraintTop_toTopOf="@+id/recipe_monthly_sale"
        app:layout_constraintLeft_toRightOf="@+id/recipe_monthly_sale"
        android:layout_marginLeft="10sp"
        >
    </TextView>
    <TextView
        android:id="@+id/recipe_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="￥14"
        android:textSize="25sp"
        android:textColor="@color/colorRed"
        app:layout_constraintTop_toBottomOf="@+id/recipe_monthly_sale"
        app:layout_constraintLeft_toLeftOf="@+id/recipe_monthly_sale"
        >
    </TextView>
    <ImageView
        android:id="@+id/recipe_add"
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:background="@drawable/ic_recipe_add"
        app:layout_constraintBottom_toBottomOf="@+id/recipe_image"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="40sp"
        >
    </ImageView>
    <ImageView
        android:id="@+id/split1"
        android:layout_width="match_parent"
        android:layout_height="0.5sp"
        android:background="@color/colorGray"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:layout_marginTop="10sp"
        >
    </ImageView>
</androidx.constraintlayout.widget.ConstraintLayout>